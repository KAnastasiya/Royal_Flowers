.delivery
  padding 45px 85px 80px
  background #ece8e8 url('static/delivery.png') no-repeat right 65px
  background-size 50%

  &__title
    font-size 40px
    font-weight 300
    margin 0 0 50px

  &__list
    width 430px
    list-style none
    padding 0
    margin 0

  &__item
    font 300 16px font-family-add
    line-height 1.7
    padding-left 75px
    position relative

    &:not(:last-of-type)
      margin-bottom 52px

    &::before
      absolute-vertical-centered()
      square(55px)
      content ''
      background-repeat no-repeat
      background-position center
      background-size contain

  &__item_payment::before
    background-image url('static/delivery.delivery__item_payment.svg')

  &__item_free-delivery::before
    background-image url('static/delivery.delivery__item_free-delivery.svg')

  &__item_anytime-delivery::before
    background-image url('static/delivery.delivery__item_anytime-delivery.svg')