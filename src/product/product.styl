.product
  display inline-block
  vertical-align top
  width 360px
  margin 0
  background-color #fff

  &:not(:nth-of-type(3n+3))
    margin-right 20px

  &:not(:nth-last-of-type(-n+3))
    margin-bottom 20px

  &:hover
    box-shadow 0 2px 14px rgba(30, 30, 30, 0.35)

    .product__price,
    .product__price::after
      color font-color-akcent

  .link_order
    text-decoration none
    display inline-block
    vertical-align top

    &:hover
      .product__name
        border-bottom 1px solid #999

  &__info
    padding 20px 24px

  &__name
    font-size 22px
    font-weight 400
    display inline
    max-width 315px

  &__price
    font 500 18px font-family-add
    line-height 1.7
    display inline-block
    vertical-align top
    padding-right 24px
    margin 20px 0 0

  &__info-category
    font-size 14px
    padding 0
    margin 0

    &:first-of-type
      margin-top 20px

  &__info-data
    font-weight 300
    line-height 1.5
    max-width 310px
    margin 0 0 10px 0