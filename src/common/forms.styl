.form
  &__field
    margin-bottom 20px

  &__controls
    margin-top 25px

    .form__tips
      display inline-block
      vertical-align middle
      margin 0

  &__label
    font 300 20px font-family-add
    display block
    margin-bottom 4px

  &__input,
  &__textarea
    placeholder(#999)
    color #999
    font 400 16px font-family-add
    line-height 1.5
    padding 8px 15px
    border 1px solid rgba(0, 0, 0, 0.2)
    border-radius 3px

    &:focus
      outline: none

    &.error
      border-color #c41230

  &__input:not(type='radio')
    min-width 190px

  &__textarea
    width 290px
    min-height 60px
    resize none

  &__tips
    font 300 16px font-family-add
    line-height 1.5
    display block
    margin 0 0 20px 0

  &__input-error
    font-size 12px
    color #c41230
    height 12px
    margin 0 0 4px 0

.form-submission-result
  display none

  &_error
    margin-top 20px

  &__block
    margin-bottom 20px

  &__text
    font 300 16px font-family-add
    line-height 1.5
    margin 0

  &__smile
    font 500 30px font-family-add
    margin 0

  &__phone
    font-size 30px
    font-weight 400
    margin 0
