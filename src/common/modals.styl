.modal
  display none
  overflow-y auto
  background-color rgba(0, 0, 0, 0.7)

  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 5

  &__dialog
    width 470px
    padding 50px 60px 75px
    margin 40px auto
    position relative
    background-color #fff

  &__header
    margin 0 0 15px 0

  &__title
    font-size 32px
    font-weight 400
    margin: 0 0 25px;

  &__text
    font 300 16px font-family-add
    line-height 1.5
    margin 0

  .icon_close
    position absolute
    top 15px
    right 15px

    &::before
      square(15px)
      content ''
      background-repeat no-repeat
      background-position center
      background-image url('static/modal__close.svg')

      position absolute
      top 0
      left 0

    &:hover::before
      background-image url('static/modal__close_hover.svg')