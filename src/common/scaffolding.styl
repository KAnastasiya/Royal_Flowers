.root
  font font-base
  color font-color-dark
  line-height 1.2
  overflow auto

  &_lock
    overflow hidden

  &__body
    min-width 1200px
    margin 0

.main-content
  padding 50px 0

.content-wrapper
  width content-wrapper-width
  margin 0 auto

.products__list
  font-size 0

.link
  color font-color-dark
  font-weight 700

  &:hover
    text-decoration none

.icon
  height 15px
  background-color transparent
  border none
  cursor: pointer

  &:focus
    outline: none

.btn
  color #fff
  font 300 18px font-family-add
  line-height 1.3
  text-decoration none

  display inline-block
  padding 14px 35px
  background-color color-akcent
  border-radius 3px
  border: none

  vertical-align middle
  cursor: pointer

  &:not(:last-child)
    margin-right 20px

  &:hover
    background-color color-akcent-darken

  &:focus
    outline: none